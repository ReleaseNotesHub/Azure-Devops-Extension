{
    "manifestVersion": 1,
    "id": "rnh-pipelinetasks",
    "name": "ReleaseNotesHub",
    "version": "1.0.13",
    "publisher": "ReleaseNotesHub",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],  
    "public": true,   
    "galleryFlags": [
        "Preview"
    ],        
    "description": "Tools for integrating with ReleaseNotesHub.",
    "tags": [
        "Notes",
        "Release Notes",  
        "ReleaseNotesHub",   
        "DevOps", 
        "Azure Pipelines",
        "Azure DevOps Extensions",
        "GitHub",
        "Build",
        "Release",
        "Continuous Integration",
        "Continuous Delivery",   
        "Extension",
        "Publish"
      ],    
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "content": {
      "details": {
        "path": "overview.md"
      }
    },    
    "links": {
        "repository": {
          "uri": "https://github.com/ReleaseNotesHub/Azure-Devops-Extension"
        },
        "issues": {
          "uri": "https://github.com/ReleaseNotesHub/Azure-Devops-Extension/issues"
        },
        "support": {
          "uri": "https://support.releasenoteshub.com/"
        }
      }, 
      "repository": {
        "type": "git",
        "uri": "https://github.com/ReleaseNotesHub/Azure-Devops-Extension"
      },    
      "branding": {
        "color": "#F32894",
        "theme": "light"
    },              
    "files": [
        {
            "path": "pullPipeLineTask"
        },
        {
          "path": "publishPipeLineTask"
        }
    ],
    "contributions": [
        {
            "id": "rnhub-service-endpoint",
            "description": "Service endpoint type for ReleaseNoteHub connections",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [ "ms.vss-endpoint.endpoint-types" ],
            "properties": {
              "name": "ReleaseNotesHub",
              "displayName": "ReleaseNotesHub",
              "url": {
                "displayName": "Server Url",
                "value": "https://api.releasenoteshub.com",
                "isVisible": "false",
                "helpText": "The ReleaseNotesHub server Url .e.g. 'https://api.releasenoteshub.com'"
              },                
              "authenticationSchemes": [
                {
                  "type": "ms.vss-endpoint.endpoint-auth-scheme-token",
                  "headers": [
                    {
                        "name": "Authorization",
                        "value": "ApiKey {{endpoint.apitoken}}"
                    }
                  ],   
                  "inputDescriptors": [
                    {
                        "id": "apitoken",
                        "name": "i18n:API Token",
                        "description": "i18n:API Token for connection. Retrieve Token from ReleaseNotesHub User Profile view .e.g. 'API-b050354e-f581-4d03-a49e-e2165ddb777f'.",
                        "inputMode": "textbox",
                        "isConfidential": true,
                        "validation": {
                            "isRequired": true,
                            "dataType": "string",
                            "maxLength": 300
                        }
                    }   
                  ]                      
                }
              ],
              "helpMarkDown": "<a href=\"https://marketplace.visualstudio.com/items?itemName=ReleaseNotesHub.rnh-pipelinetasks\" target=\"_blank\"><b>Learn More</b></a>"
            },
            "icons": {
                "default": "images/icon.png",
                "large": "images/icon.png"
            }
        },        
        {
            "id": "rnh_trigger_pull_pipelinetask",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "pullPipeLineTask"
            }
        },   
        {
          "id": "rnh_trigger_publish_pipelinetask",
          "type": "ms.vss-distributed-task.task",
          "targets": [
              "ms.vss-distributed-task.tasks"
          ],
          "properties": {
              "name": "publishPipeLineTask"
          }
      }                
    ]
}